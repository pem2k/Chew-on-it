<div class="jumbo-banner about-splash">
	<div class="content d-flex h-100">
		<div class="aside-column d-none d-md-block">
		</div>
		<div class="text-center d-flex flex-column justify-content-center align-items-center text-light flex-fill h-100">
			<div class="bg-float py-1 px-5">
			<h1 class="display-3">Chew on This</h1>
			</div>
		</div>
	</div>
</div>
<div class="content content-border d-flex align-items-start h-100 pt-3">
	{{#if user}}
	{{#if otherProfile}}
	{{> aside userProfileSer otherProfile=true}}
	{{else}}
	{{> aside user}}
	{{/if}}
	{{/if}}
	<div class="d-flex flex-wrap flex-fill col-10" id="feed">
		<div class="d-flex justify-content-center row">
			{{#each reviews}}
			<div class="bg-white border shadow mt-2 w-100">
				<div class="w-100">
					<div class="d-flex flex-row justify-content-between align-items-center p-2 border-bottom">
						<div class="d-flex flex-row align-items-center feed-text px-2"><img class="rounded-circle" src="{{User.profile_pic_url}}" width="45">
						<!-- REVIEW HEADER (RESTAURANT NAME - USER - TIME?) -->
							<div class="d-flex flex-column flex-wrap ml-2">
								<span class="font-weight-bold">{{Business.business_name}}</span>
								<span class="text-black-50 time">{{User.first_name}} {{User.last_name}}</span>
							</div>
						</div>
						<div class="feed-icon px-2"><i class="fa fa-ellipsis-v text-black-50"></i></div>
					</div>
				</div>
				<!-- REVIEW TEXT -->
				<div class="p-2 px-3">
					<span>{{content}}</span>
					{{#if review_pic_url}}
					<div class="feed-image p-2 px-3"><img class="img-fluid img-responsive" src="{{review_pic_url}}"></div>
					{{/if}}
				</div>
				<div class="d-flex justify-content-end socials p-2 py-3"><i class="fa fa-thumbs-up"></i><i class="fa fa-comments-o"></i><i class="fa fa-share"></i></div>
			</div>
			{{/each}}
		</div>
	</div>
</div>