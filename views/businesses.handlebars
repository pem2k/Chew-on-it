<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCVeiXPohR3WJKh94VpZEIbNr4wjAqPfoQ&libraries=places"></script>
<script src="/scr/business.js"></script>
<script src="/scr/main.js"></script>
{{#if first_name}}
<script src="/scr/user.js"></script>
<script src="/scr/cloudinary.js"></script>
{{/if}}
