<!doctype html>
<html lang="en">
<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/style.css">
	<title></title>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-highlight">
		{{#if first_name}}
		<a class="navbar-brand" href="/feed">Project 2</a>
		{{else}}
		<a class="navbar-brand" href="/">Project 2</a>
		{{/if}}
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav mr-auto">
			<li class="nav-item active">
				<a class="nav-link" href="/reviews">Reviews</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/users">Users</a>
			</li>
			<li class="nav-item">
				<a class="nav-link" href="/about">About</a>
			</li>
			{{#if first_name}}
			<li class="nav-item">
				<a class="nav-link" href="/profile">{{first_name}}</a>
			</li>
			<li>
				<img src="/img/default_profile.jpg" class="profile-thumb" style="width: 32px; margin-top: 4px">
			</li>
			<li class="nav-item">
				<button class="btn" id="logout">Logout</button>
			</li>
			{{else}}
			<li class="nav-item">
				<a class="nav-link" href="/login">Login/Sign Up</a>
			</li>
			{{/if}}

			</ul>
			<form class="form-inline my-2 my-lg-0">
			<input id="userSearch" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
			<button class="btn my-2 my-sm-0 bg-shadow" type="submit">Search</button>
			</form>
		</div>
	</nav>
	<main class="bg-background">
		{{{body}}}
	</main>

	<!-- Optional JavaScript -->
	<!-- jQuery first, then Popper.js, then Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
	<script src="/scr/main.js"></script>
	{{#if first_name}}
	<script src="/scr/user.js"></script>
	{{/if}}
</body>
</html>