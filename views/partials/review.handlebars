<div class="bg-white border shadow mb-3 w-100">
	<div class="w-100">
		<div class="position-relative d-flex flex-column justify-content-between align-items-start p-2 border-bottom">
			<div class="position-static p-2 border-bottom d-flex flex-column w-100">
				<span class="font-weight-bold">{{restaurant_name}}</span>
				<span class="text-black-50 time">{{restaurant_address}}</span>
			</div>
			<div class="position-relative d-flex flex-column justify-content-end w-100">
				<div class="position-static d-flex flex-row align-items-start feed-text pt-2 px-2">
					<img class="rounded-circle" src="{{User.profile_pic_url}}" width="45">
					<p class="card-title flex-grow-1 mb-0 px-3 ">{{User.first_name}} {{User.last_name}}</p>
					<a class="stretched-link" href="/profile/{{User.id}}"></a>
					<div class="feed-icon px-2 pt-2">
						<i class="fa fa-ellipsis-v text-black-50"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- REVIEW TEXT -->
	<div class="p-3 pb-4 border-bottom" style="min-height: 100px">
		<span>{{content}}</span>
		{{#if review_pic_url}}
		<div class="feed-image p-2 px-3"><img class="img-fluid img-responsive" src="{{review_pic_url}}"></div>
		{{/if}}
	</div>
	<div class="bg-light">
	{{#each Messages}}
	{{>message}}
	{{/each}}
	</div>
	<div class="form-group mt-2 ml-2 mr-2 mb-0">
		<textarea class="form-control comment-content" placeholder="Add comment" id="comment-{{id}}" style="resize: none;"></textarea>
		<div class="d-flex justify-content-end socials p-1 pb-3" >
			<button type="button" class="py-0 btn btn-success comment-button" onclick="addComment(event, {{id}})">Comment <i class="fa fa-comments-o"></i><i class="fa fa-share"></i></button>
		</div>
	</div>
</div>