<div class="aside-column d-none d-md-block">
	<div class="card bg-highlight rounded-0 h-100">

		<!--Header/profile image-->
		<div class="rounded-0 text-center">
			<div class="mx-auto d-block position-relative aside-test">
				<img src="/img/default_profile.jpg" class="aside-img position-relative">
				<span class="position-relative position-absolute fixed-bottom" style="left: 188px; bottom: 4px;">
					<a href="#" id="edit-profile"><img src="/img/icn/icon_edit.png"></a>
				</span>
			</div>

			<h2 class="card-title">{{first_name}} {{last_name}}</h2>
			<button type ="button" id="upload_widget" class="btn btn-success">Update Profile Picture</button>
		</div>

		<!--Header/profile image-->
		<div class="card-body py-2 h-100">
			<h6 class="card-subtitle text-center mb-2">Following</h6>
			<hr />
			<div class="row">
				<div class="col-12 card text-dark d-flex flex-row justify-content-start align-items-start text-center mb-1">
					<div style="width: 65px; margin-bottom: 4px">
						<img src="/img/default_profile.jpg" class="mx-auto py-1 profile-thumb">
					</div>
					<div class="d-flex flex-column flex-fill justify-content-start align-items-start pl-3 text-left">
						<p class="mb-0 text-truncate">Axel</p>
						<p class="text-truncate">Kern</p>
						<a class="stretch-link" href="/profile/1"></a>
					</div>
				</div>
				{{#each friend}}
				<div class="col-12 card text-dark d-flex flex-row justify-content-start align-items-start text-center mb-1">
					<div style="width: 65px; margin-bottom: 4px">
						<img src="/img/default_profile.jpg" class="mx-auto py-1 profile-thumb">
					</div>
					<div class="d-flex flex-column flex-fill justify-content-start align-items-start pl-3 text-left">
						<p class="mb-0 text-truncate">{{first_name}}</p>
						<p class="text-truncate">{{last_name}}</p>
						<a class="stretch-link" href="/profile/{{id}}"></a>
					</div>
				</div>
				{{/each}}
			</div>
		</div>
	</div>
</div>